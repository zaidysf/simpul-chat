# MySQL Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
# Uncomment to prefer socket over host/port (e.g., DBngin)
# DB_SOCKET=/tmp/mysql_3306.sock

# Production database credentials (required for RAILS_ENV=production)
# These are used for all production databases (primary, cache, queue, cable)
BACKEND_DATABASE_USERNAME=your_db_username
BACKEND_DATABASE_PASSWORD=your_db_password

# Database naming
DB_NAME_PREFIX=simpul_chat
# DB_NAME_DEVELOPMENT=simpul_chat_development
# DB_NAME_TEST=simpul_chat_test
# DB_NAME_PRODUCTION=simpul_chat_production

# For production, you can specify individual database names:
# DB_NAME_PRODUCTION=your_production_db
# DB_NAME_PRODUCTION_CACHE=your_production_db_cache
# DB_NAME_PRODUCTION_QUEUE=your_production_db_queue
# DB_NAME_PRODUCTION_CABLE=your_production_db_cable

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379/1
REDIS_PRESENCE_URL=redis://127.0.0.1:6379/2

# CORS - Frontend origin (required for production)
FRONTEND_ORIGIN=http://localhost:5173
